<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1>商品一覧</h1>
  </div>

  <div class="card shadow-sm">
    <div class="card-body p-0">
      <table class="table table-striped table-hover mb-0">
        <thead class="table-dark">
          <tr>
            <th scope="col" class="ps-4">商品名</th>
            <th scope="col" class="text-end">価格</th>
            <th scope="col" class="text-end pe-4">在庫数</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td class="ps-4 align-middle fw-bold"><%= item.name %></td>
              <td class="text-end align-middle">
                <% if item.current_price %>
                  <%= number_to_currency(item.current_price.price, unit: "¥", precision: 0) %>
                <% else %>
                  <span class="text-muted">-</span>
                <% end %>
              </td>
              <td class="text-end pe-4 align-middle">
                <% stock = item.stock_quantity %>
                <span class="<%= stock > 0 ? 'text-success' : 'text-danger' %> fw-bold">
                  <%= stock %>
                </span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

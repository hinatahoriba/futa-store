<%= form_with(model: [:admin, item], local: true) do |f| %>
  <% if item.errors.any? %>
    <div class="alert alert-danger">
      <ul class="mb-0">
        <% item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, "商品名", class: "form-label fw-bold" %>
    <%= f.text_field :name, class: "form-control", placeholder: "例: スポーツドリンク" %>
    <div class="form-text">商品の名前を入力してください。</div>
  </div>

  <div class="d-flex justify-content-end gap-2">
    <%= link_to "キャンセル", admin_items_path, class: "btn btn-secondary" %>
    <%= f.submit item.new_record? ? "登録する" : "更新する", class: "btn btn-primary" %>
  </div>
<% end %>

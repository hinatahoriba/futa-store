<div class="mb-4">
  <h1 class="h2">購入履歴一覧</h1>
</div>

<div class="card shadow-sm border-0">
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead>
          <tr>
            <th scope="col" class="ps-4">購入日時</th>
            <th scope="col">学生番号</th>
            <th scope="col">ユーザー名</th>
            <th scope="col">商品名</th>
            <th scope="col" class="text-end">数量</th>
            <th scope="col" class="text-end pe-4">購入時価格</th>
          </tr>
        </thead>
        <tbody>
          <% @purchase_histories.each do |purchase| %>
            <tr>
              <td class="ps-4 align-middle">
                <%= l purchase.created_at, format: :long %>
              </td>
              <td class="align-middle font-monospace">
                <%= purchase.user.student_id %>
              </td>
              <td class="align-middle fw-bold">
                <%= purchase.user.name %>
              </td>
              <td class="align-middle">
                <%= purchase.item.name %>
              </td>
              <td class="text-end align-middle">
                <%= purchase.quantity %>
              </td>
              <td class="text-end pe-4 align-middle fw-bold text-danger">
                <%= number_to_currency(purchase.price.price, unit: "¥", precision: 0) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

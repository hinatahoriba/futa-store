<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1>全ユーザー購入履歴</h1>
  </div>

  <div class="card shadow-sm">
    <div class="card-body p-0">
      <table class="table table-striped table-hover mb-0">
        <thead class="table-dark">
          <tr>
            <th scope="col" class="ps-4">購入日時</th>
            <th scope="col">学生番号</th>
            <th scope="col">ユーザー名</th>
            <th scope="col">商品名</th>
            <th scope="col" class="text-end">数量</th>
            <th scope="col" class="text-end pe-4">購入時価格</th>
          </tr>
        </thead>
        <tbody>
          <% @purchase_histories.each do |purchase| %>
            <tr>
              <td class="ps-4 align-middle">
                <%= l purchase.created_at, format: :short %>
              </td>
              <td class="align-middle font-monospace">
                <%= purchase.user.student_id %>
              </td>
              <td class="align-middle fw-bold">
                <%= purchase.user.name %>
              </td>
              <td class="align-middle">
                <%= purchase.item.name %>
              </td>
              <td class="text-end align-middle">
                <%= purchase.quantity %>
              </td>
              <td class="text-end pe-4 align-middle">
                <%# 購入時の価格を参照（items.priceではない） %>
                <%= number_to_currency(
                      purchase.price.price,
                      unit: "¥",
                      precision: 0
                    ) %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

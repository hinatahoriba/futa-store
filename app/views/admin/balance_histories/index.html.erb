<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>チャージ履歴一覧</h1>
    <a href="<%= admin_root_path %>" class="btn btn-secondary">管理画面トップへ</a>
  </div>

  <div class="card shadow-sm">
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover mb-0">
          <thead class="table-light">
            <tr>
              <th scope="col">チャージ日時</th>
              <th scope="col">学生番号</th>
              <th scope="col">ユーザー名</th>
              <th scope="col" class="text-end">チャージ金額</th>
            </tr>
          </thead>
          <tbody>
            <% @balance_histories.each do |history| %>
              <tr>
                <td><%= l history.created_at, format: :long %></td>
                <td><%= history.user.student_id %></td>
                <td><%= history.user.name %></td>
                <td class="text-end fw-bold text-success">
                  +<%= history.value.to_fs(:delimited) %>円
                </td>
              </tr>
            <% end %>
            <% if @balance_histories.empty? %>
              <tr>
                <td colspan="4" class="text-center py-4 text-muted">チャージ履歴がありません。</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

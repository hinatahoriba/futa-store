<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="h2">ユーザー一覧</h1>
  <%= link_to new_admin_user_path, class: "btn btn-primary" do %>
    <i class="bi bi-person-plus me-1"></i> 新規ユーザー登録
  <% end %>
</div>

<div class="card shadow-sm border-0">
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead>
          <tr>
            <th scope="col" class="ps-4">学生番号</th>
            <th scope="col">氏名</th>
            <th scope="col" class="text-end pe-4">残高</th>
            <th scope="col" class="text-center" style="width: 150px;">アクション</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td class="ps-4 align-middle font-monospace"><%= user.student_id %></td>
              <td class="align-middle fw-bold"><%= user.name %></td>
              <td class="text-end align-middle pe-4">
                <%= number_to_currency(user.balance, unit: "¥", precision: 0) %>
              </td>
              <td class="text-center align-middle">
                <%= link_to edit_admin_user_path(user), class: "btn btn-sm btn-outline-secondary" do %>
                  <i class="bi bi-pencil me-1"></i>編集
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-header bg-white py-3">
          <h1 class="h4 mb-0 text-center">価格変更</h1>
        </div>
        <div class="card-body">
          <div class="mb-4">
            <h5 class="fw-bold">商品情報</h5>
            <p class="mb-1">商品名: <strong><%= @item.name %></strong></p>
            <p class="mb-0">現在の価格: 
              <strong>
                <% if @item.current_price %>
                  <%= number_to_currency(@item.current_price.price, unit: "¥", precision: 0) %>
                <% else %>
                  未設定
                <% end %>
              </strong>
            </p>
          </div>

          <hr class="my-4">

          <%= form_with(model: [:admin, @item, @price], local: true) do |f| %>
            <% if @price.errors.any? %>
              <div class="alert alert-danger">
                <ul class="mb-0">
                  <% @price.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.label :price, "新しい価格", class: "form-label fw-bold" %>
              <div class="input-group">
                <span class="input-group-text">¥</span>
                <%= f.number_field :price, class: "form-control", placeholder: "数値を入力", min: 0 %>
              </div>
              <div class="form-text">新しい価格を入力してください。古い価格は履歴として保存されます。</div>
            </div>

            <div class="d-flex justify-content-end gap-2">
              <%= link_to "キャンセル", admin_items_path, class: "btn btn-secondary" %>
              <%= f.submit "価格を変更する", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
